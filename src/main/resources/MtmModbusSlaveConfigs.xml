<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <ModbusDevices>

        <ModbusSlave>
            <!--  默认127.0.0.1  -->
            <HostAddress>127.0.0.1</HostAddress>
            <!--  默认502  -->
            <HostPort>7777</HostPort>
            <!--  默认0  -->
            <SlaveId>0</SlaveId>

            <!--  默认3  -->
            <!--  1 read coils -->
            <!--  2 read discrete inputs  -->
            <!--  3 read holding registers  -->
            <!--  4 read input registers  -->
            <Function>3</Function>
            <UpstreamPattens>
                <!--  配置上报周期、上报topic、上报属性、数据来源  -->
                <UpstreamPatten>
                    <!--  默认为0  -->
                    <Qos>0</Qos>
<!--                    <CronExpr>this is CronExpr</CronExpr>-->
                    <IntervalInMilliseconds>2000</IntervalInMilliseconds>
                    <Topics>
                        <Topic>/testUpstream/dataReceive/0</Topic>
                        <Topic>/testUpstream/dataReceive/1</Topic>
                    </Topics>
                    <Attributes>
                        <Attribute>
                            <!--  必须  -->
                            <AttrName>temperature</AttrName>
                            <!--  默认为0  -->
                            <Address>0</Address>
                            <!--  默认为1  -->
                            <Quantity>1</Quantity>
                        </Attribute>
                        <Attribute>
                            <!--  必须  -->
                            <AttrName>water level</AttrName>
                            <!--  默认为0  -->
                            <Address>1</Address>
                            <!--  默认为1  -->
                            <Quantity>2</Quantity>
                        </Attribute>

                    </Attributes>

                </UpstreamPatten>

                <UpstreamPatten>
                    <!--  默认为0  -->
                    <Qos>0</Qos>
                    <CronExpr>*/5 * * * * ?</CronExpr>
                    <IntervalInMilliseconds>2000</IntervalInMilliseconds>
                    <Topics>
                        <Topic>/testUpstream/dataReceive/3</Topic>
                        <Topic>/testUpstream/dataReceive/4</Topic>
                    </Topics>
                    <Attributes>
                        <Attribute>
                            <!--  必须  -->
                            <AttrName>relative humidity</AttrName>
                            <!--  默认为0  -->
                            <Address>3</Address>
                            <!--  默认为1  -->
                            <Quantity>1</Quantity>
                        </Attribute>
                    </Attributes>

                </UpstreamPatten>

            </UpstreamPattens>

            <DownstreamTopics>
                <Topic>/testDownstream/dataReceive/0</Topic>
                <Topic>/testDownstream/dataReceive/1</Topic>
            </DownstreamTopics>

            <!--  可选项：没有则用Mtm中默认broker  -->
            <TargetMqttBroker>
                <BrokerAddress>127.0.0.1</BrokerAddress>
                <BrokerPort>1883</BrokerPort>
            </TargetMqttBroker>

            <!--  可选项：没有则用Mtm中默认client  -->
            <ProxyMqttClient>
                <ClientId>TestClient0</ClientId>
                <Username>TestClient0</Username>
                <Password>TestClient0</Password>
            </ProxyMqttClient>

        </ModbusSlave>

        <ModbusSlave>
            <HostAddress>127.0.0.1</HostAddress>
            <HostPort>7778</HostPort>
            <SlaveId>1</SlaveId>
            <Function>1</Function>
            <UpstreamPattens>
                <UpstreamPatten>
                    <!--  默认为0  -->
                    <Qos>0</Qos>
<!--                <CronExpr>this is CronExpr</CronExpr>-->
                    <IntervalInMilliseconds>4000</IntervalInMilliseconds>

                    <!--可以为空但必须有 之后会改-->
                    <Topics>
                        <Topic>/testUpstream/dataReceive/20</Topic>
                        <Topic>/testUpstream/dataReceive/21</Topic>
                    </Topics>

                    <Attributes>
                        <Attribute>
                            <!--  必须  -->
                            <AttrName>temperature</AttrName>
                            <!--  默认为0  -->
                            <Address>0</Address>
                            <!--  默认为1  -->
                            <Quantity>1</Quantity>
                        </Attribute>
                    </Attributes>
                </UpstreamPatten>
            </UpstreamPattens>

            <!--可以为空但必须有 之后会改-->
            <DownstreamTopics>
                <Topic>/testDownstream/dataReceive/20</Topic>
            </DownstreamTopics>

            <TargetMqttBroker>
                <BrokerAddress>127.0.0.1</BrokerAddress>
                <BrokerPort>1883</BrokerPort>
            </TargetMqttBroker>

            <ProxyMqttClient>
                <ClientId>TestClient1</ClientId>
                <Username>TestClient1</Username>
                <Password>TestClient1</Password>
            </ProxyMqttClient>

        </ModbusSlave>

    </ModbusDevices>

    <MqttDevices>
        waiting for finish.
    </MqttDevices>

</Configuration>